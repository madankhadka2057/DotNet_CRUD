@model CRUD_APP.Models.Entities.Student
<link href="~/css/Add_Student.css" rel="stylesheet" />
<div class="container-fluid mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
                <h3>Update Records</h3>
                <form class="form-card" method="post">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex">
                            <label class="form-control-label px-1" asp-for="Name">Name<span class="text-danger"> *</span></label>
                            <input type="text" id="name" name="name" placeholder="Enter your name" asp-for="Name">
                        </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex">
                            <label class="form-control-label px-1" asp-for="Email">Email<span class="text-danger"> *</span></label>
                            <input type="email" id="email" name="email" placeholder="Enter your email" asp-for="Email">
                        </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex">
                            <label class="form-control-label px-1" asp-for="roll">Roll<span class="text-danger"> *</span></label>
                            <input type="text" id="roll" name="roll" placeholder="Enter your roll number" asp-for="roll">
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="form-group col-sm-6">
                            <button type="submit" class="btn-block btn-primary">Add Student</button>
                            <a asp-action="List" asp-controller="Student"><button type="button" class="btn-block btn-dark">Cancel</button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
