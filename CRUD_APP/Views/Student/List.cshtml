@model List<CRUD_APP.Models.Entities.Student>

@{
    if(Model is not null)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                <div class="d-flex justify-content-around">
                    <h4>Student Records</h4>
                    <a asp-action="Add" asp-controller="Student" class="justify-content-center"><button name="Edit" type="submit" class="btn btn-primary btn-xs" asp-action="Add" asp-controller="Student">Add Student</button></a>
                </div>
                    <div class="table-responsive">
                        <input type="hidden" id="Id" name="Id" />
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                            <th>S.N</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roll</th>
                            <th>Action</th>

                            </thead>
                            <tbody class="position-relative">
                                @{
                                    var count = 0;
                                    foreach (var std in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@std.Name</td>
                                            <td>@std.Email</td>
                                            <td>@std.roll</td>
                                            <td>
                                                <form>
                                                    <input type="hidden" name="id" value="@std.Id" />
                                                    <button name="Edit" class="btn btn-primary btn-xs" asp-action="Edit" asp-controller="Student">Edit</button>
                                                    <button type="submit" class="btn btn-danger btn-xs" asp-action="Delete" asp-controller="Student" formmethod="post">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h3>Student record is not found</h3>
    }
}


<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="Mohsin">
                </div>
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="Irshad">
                </div>
                <div class="form-group">
                    <textarea rows="2" class="form-control" placeholder="CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan"></textarea>
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



<div class=" model fade " id="delete"  role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header  m-auto">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title  " id="Heading">Delete this entry</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger justify-content-center"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>
            </div>
            <div class="modal-footer justify-content-center ">
                <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</div>